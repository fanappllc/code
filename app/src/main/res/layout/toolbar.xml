<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gradiant">

    <RelativeLayout
        android:id="@+id/toolBarLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/toggle"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbarbackpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:visibility="visible" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/toolBarHeaderTextViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:visibility="visible">

        <TextView
            android:id="@+id/hedertextview"
            fontPath="@string/font_josefinsans_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Header Text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/toolBarRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center">


        <ImageView
            android:id="@+id/imageView_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@color/white"
            android:visibility="gone" />


        <TextView
            android:id="@+id/headerRightText"
            fontPath="@string/font_quicksand_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.fanphotographer.switchbutton.SwitchButton
            android:id="@+id/switchButton"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            app:animationVelocity="300"
            app:measureFactor="1.5"
            app:onDrawable="@drawable/ios_back_drawable"
            app:thumbDrawable="@drawable/ios_thumb_selector"
            app:thumb_marginBottom="-14dp"
            app:thumb_marginLeft="-7dp"
            app:thumb_marginRight="-7dp"
            app:thumb_marginTop="-8dp"

            />


    </RelativeLayout>

</RelativeLayout>