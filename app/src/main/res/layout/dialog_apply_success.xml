<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_bg">

        <TextView
            android:id="@+id/textview__header"
            fontPath="@string/font_quicksand_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Promocode applied successfully"
            android:textAlignment="gravity"
            android:textColor="@color/black_edit"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textview__messages"
            fontPath="@string/font_quicksand_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview__header"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="$50."
            android:textAlignment="gravity"
            android:textColor="@color/black_edit"
            android:textSize="16sp" />


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview__messages"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/button_cancel"
                fontPath="@string/font_quicksand_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/framelayout"
                android:gravity="center"
                android:padding="13sp"
                android:text="@string/cancel"
                android:textColor="#0040DD"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="0.8dp"
                android:layout_height="39sp"
                android:layout_centerInParent="true"
                android:background="@color/light_gray"
                android:clipToPadding="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutMode="clipBounds" />

            <TextView
                android:id="@+id/button_proceed"
                fontPath="@string/font_quicksand_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/framelayout"
                android:gravity="center"
                android:padding="13sp"
                android:text="@string/proceed"
                android:textColor="#0040DD"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>