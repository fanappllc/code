<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fancustomer.activity.BookingConfirmed">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <RelativeLayout
                android:id="@+id/profileRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary">


                    <fragment
                        android:id="@+id/fragmentMap1"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/map_backgound">


                    </ImageView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/toolBarLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/toolbarbackpress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:src="@mipmap/back"
                                android:visibility="visible" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/toolBarHeaderTextViewLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/hedertextview"
                                fontPath="@string/font_josefinsans_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Header Text"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/toolBarRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/imageView_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:src="@mipmap/delete_message"
                                android:visibility="gone" />


                        </RelativeLayout>

                    </RelativeLayout>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="160dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="103dp"
                        android:layout_height="103dp"
                        android:layout_gravity="center"
                        android:background="@drawable/white_circle">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/default_user" />

                    </RelativeLayout>

                    F
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileRelativeLayout"

                android:background="@color/white">


                <TextView
                    android:id="@+id/userNameTextView"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/black_edit"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_fan_texView"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userNameTextView"
                    android:gravity="center"
                    android:text="fan Photographer"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />


                <RatingBar
                    android:id="@+id/userRatingBar"
                    style="@style/RatingBarSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_fan_texView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:progressBackgroundTint="@color/gray"
                    android:progressTint="@color/dark_orange"
                    android:rating="0"
                    android:secondaryProgressTint="@color/gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userRatingBar"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        fontPath="@string/font_quicksand_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userNameTextView"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:text="@string/booking_detail"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_gray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/arriving_textView"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arriving"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/arriving_time_textView"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@mipmap/watch"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="@color/black_edit"
                            android:textSize="14sp" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/dateTimeImageVIew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/date_time" />


                        <TextView
                            android:id="@+id/dateTextView"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/dateTimeImageVIew"
                            android:text=""
                            android:textColor="@color/black_edit"
                            android:textSize="14sp" />
                        <!--Aug 17, 04:45 PM-->
                        <TextView
                            android:id="@+id/photoShootTime"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@mipmap/watch"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="@color/black_edit"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:padding="10dp">


                        <ImageView
                            android:id="@+id/mobileImageVIew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/mobile" />


                        <TextView
                            android:id="@+id/mobileModalTextView"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/mobileImageVIew"
                            android:text=""
                            android:textColor="@color/black_edit"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_gray" />

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fancustomer.helper.NumberProgressBar
                android:id="@+id/number_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                map:progress_max="60"
                map:progress_reached_bar_height="10dp"
                map:progress_reached_color="#4FF1FC"
                map:progress_text_color="#3498DB"
                map:progress_text_offset="1dp"
                map:progress_text_size="10sp"
                map:progress_text_visibility="invisible"
                map:progress_unreached_bar_height="20dp"
                map:progress_unreached_color="#5AC8F9"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/button_proceed"
                    fontPath="@string/font_quicksand_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/framelayout"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="13sp"
                    android:text="@string/proceed"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="0dp"
                    android:layout_height="39sp"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:clipToPadding="true"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:layoutMode="clipBounds" />

                <TextView
                    android:id="@+id/button_cancel"
                    fontPath="@string/font_quicksand_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/framelayout"
                    android:background="@color/dark_orange"
                    android:gravity="center"
                    android:padding="13sp"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
