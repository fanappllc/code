<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_rounded_bg"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginStart="@dimen/padding_10"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:paddingStart="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5"
                android:text="@string/alert"
                android:textColor="@color/black"
                android:textSize="@dimen/size_18"
                fontPath="@string/font_quicksand_regular" />

            <!--  <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/gray_shadow_color"></View>-->

        </LinearLayout>


        <TextView
            android:id="@+id/tv_message"
            fontPath="@string/font_quicksand_medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_5"
            android:padding="@dimen/padding_10"
            android:text="Are you sure you want to logout?"
            android:textColor="@color/black_edit"
            android:textDirection="locale"
            android:textSize="@dimen/size_16" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_marginEnd="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginStart="@dimen/padding_10"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="@string/okk"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16"
                fontPath="@string/font_quicksand_medium" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>