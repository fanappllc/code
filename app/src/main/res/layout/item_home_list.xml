<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/padding_10"
    card_view:cardCornerRadius="7dp">


    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="MissingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:paddingRight="@dimen/padding_5"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@mipmap/default_user" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:drawablePadding="@dimen/padding_5"
                        android:text="@string/mike"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16"
                        fontName="JosefinSans-Regular_2.ttf" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_name"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:layout_marginTop="@dimen/padding_5"
                        android:text="@string/oilverio"
                        android:textColor="@color/hint_gray"
                        android:textSize="@dimen/size_12"
                        fontName="Quicksand-Regular.ttf"
                        />


                    <TextView
                        android:id="@+id/tv_date_with_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="@string/date_with_time"
                        android:drawableLeft="@mipmap/calendar"
                        android:drawablePadding="@dimen/padding_10"
                        android:textColor="@color/hint_gray"
                        android:textSize="@dimen/size_12"
                        fontName="Quicksand-Regular.ttf"
                        />

                    <TextView
                        android:id="@+id/tv_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_date_with_time"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="@string/hour"
                        android:drawableLeft="@mipmap/watch"
                        android:drawablePadding="@dimen/padding_10"
                        android:textColor="@color/hint_gray"
                        android:textSize="@dimen/size_12"
                        fontName="Quicksand-Regular.ttf"
                        />


                    <TextView
                        android:id="@+id/tv_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_date_with_time"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="@string/min"
                        android:drawableLeft="@mipmap/distance"
                        android:drawablePadding="@dimen/padding_10"
                        android:textColor="@color/hint_gray"
                        android:layout_marginRight="@dimen/padding_15"
                        android:textSize="@dimen/size_12"
                        fontName="Quicksand-Regular.ttf"
                        />

                </RelativeLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/gray_sep" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@+id/container"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/accept_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/accept"
                android:padding="@dimen/padding_12"
                android:textColor="@color/green"
                android:textSize="@dimen/size_16"
                android:gravity="center"
                fontName="Quicksand-Regular.ttf"
                />

            <TextView
                android:id="@+id/declineTexView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/decline"
                android:gravity="center"
                android:padding="@dimen/padding_12"
                android:textColor="@color/dark_orange"
                android:textSize="@dimen/size_16"
                fontName="Quicksand-Regular.ttf"
                />

        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>