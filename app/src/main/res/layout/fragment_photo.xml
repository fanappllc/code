<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fancustomer.fragment.PhotoFragment">

    <include
        android:id="@+id/toolbar_enter_mobile"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<ImageView-->
    <!--android:id="@+id/open_button"-->
    <!--android:layout_width="40dp"-->
    <!--android:layout_height="130dp"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_below="@+id/toolbar_enter_mobile"-->
    <!--android:src="@mipmap/side_option_close" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_enter_mobile">


        <Button
            android:id="@+id/show"
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/side_option"
            android:visibility="visible" />

        <TextView
            fontPath="@string/font_quicksand_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="There are no photos in this folder, please sync from cloud"
            android:textColor="#E8E8E8"
            android:textSize="16sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/headerTextView"
            fontPath="@string/font_quicksand_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_enter_mobile"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Photos in app appear compressed, save to camera role for true image quality."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            tools:ignore="NotSibling" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerTextView"
            android:layout_marginBottom="45dp" />

        <TextView
            android:id="@+id/noSaved_TextView"
            fontPath="@string/font_quicksand_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="No images!!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="4">


            <TextView
                android:id="@+id/saveTextView"
                fontPath="@string/font_quicksand_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:padding="13sp"
                android:text="Saved"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/unSavedTextView"
                fontPath="@string/font_quicksand_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="13sp"
                android:text="Unsaved"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_animation"
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar_enter_mobile"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent">


            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="112dp"
                android:alpha=".1"
                android:background="@mipmap/shadow"
                android:visibility="visible" />


            <Button
                android:id="@+id/show1"
                android:layout_width="40dp"
                android:layout_height="130dp"
                android:background="@mipmap/side_option_close"
                android:visibility="gone" />


        </RelativeLayout>


        <!--#f9f7f7-->

        <LinearLayout
            android:id="@+id/sliding1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FCFCFC"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="1px"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/vertical_recycler_view"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:background="#FCFCFC" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
