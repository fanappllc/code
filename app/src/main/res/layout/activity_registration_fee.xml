<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingPrefix">


    <include
        android:id="@+id/toolbar_update_user"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_update_user"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.16"
            android:background="@drawable/blue_bottom_btn_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/txt_headder"
                fontPath="@string/font_quicksand_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16"
                />

            <TextView
                android:id="@+id/registration_fee"
                fontPath="@string/font_quicksand_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="0.74"
            android:layout_height="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingBottom="@dimen/padding_10">


                <TextView
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_card_detail"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_18"
                    />



                <TextView
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:text="@string/cardnumber"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cardNoEditText"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_border_and_corner_bg"
                    android:hint="@string/cardnumber"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:digits="1234567890-"
                    android:inputType="number"
                    android:maxLength="19"/>


                <TextView
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:text="@string/card_holder_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16" />

                <EditText
                    android:id="@+id/cardHolderNameEditText"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_border_and_corner_bg"
                    android:hint="Harry Porter"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:maxLength="30"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
               >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/padding_10"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        fontPath="@string/font_quicksand_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:text="@string/expires_on"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/expireOnEditText"
                        fontPath="@string/font_quicksand_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gray_border_and_corner_bg"
                        android:hint="02/2017"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:maxLength="7"
                        android:inputType="number"
                        android:digits="1234567890/"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        fontPath="@string/font_quicksand_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:text="@string/cvv_cvc"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16" />

                    <EditText
                        android:id="@+id/cvvEditText"
                        fontPath="@string/font_quicksand_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="5"
                        android:background="@drawable/gray_border_and_corner_bg"
                        android:hint="***"
                        android:singleLine="true"
                        android:password="true"
                        android:maxLength="3"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <TextView
                android:id="@+id/txtSubmitDetail"
                fontPath="@string/font_josefinsans_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_selector_btn"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="@dimen/padding_15"
                android:text="@string/pay"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
