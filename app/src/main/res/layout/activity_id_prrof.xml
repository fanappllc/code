<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingPrefix">


    <include
        android:id="@+id/toolbar_update_user"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_update_user"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_5"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/txt_headder"
                fontPath="@string/font_quicksand_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/id_headding"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />


            <TextView
                fontPath="@string/font_quicksand_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:text="@string/id_sub_header"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20">

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_20"
                android:background="@drawable/doted_line"
                android:gravity="center"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/license_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/upload"
                    android:visibility="visible" />

                <TextView
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20"
                    android:text="@string/tap_to"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <TextView
                android:id="@+id/txtSubmitDetail"
                fontPath="@string/font_josefinsans_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_selector_btn"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="@dimen/padding_15"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
